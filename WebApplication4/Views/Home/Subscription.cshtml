

@{
    ViewData["Title"] = "Subscription";
}

<div id="clientKey" class="hidden">@ViewBag.ClientKey</div>
<div id="type" class="hidden">@ViewBag.PaymentMethod</div>
<div id="payment_amount" class="hidden">You're going to pay: @ViewBag.amount @ViewBag.currency</div>
<div id="payment-page">
    <div class="container">
        @* The Checkout integration type will be conditionally rendered below. *@
        @* Drop-in includes styling out-of-the-box, so no additional CSS classes are needed. *@
        <div class="payment-container">
            <div id="payment" class="payment"></div>
        </div>
    </div>
</div>

@* Adyen Component client code *@
<script src="~/js/all_adyenImplementation.js" asp-append-version="true"></script>
<script src="https://pay.google.com/gp/p/js/pay.js"></script>
<script src="~/js/all.js" asp-append-version="true"></script>