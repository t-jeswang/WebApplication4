@{
    ViewData["Title"] = "Cart";
}
    <style type="text/css">
    img{
        width: 10%;
        height: auto;
    }
</style>
<main class="preview-page">
    <section class="cart">
        <h2>Cart</h2>
        <div class="order-summary">
            <ul class="order-summary-list">
                <li class="order-summary-list-list-item">
                    <img src="~/images/sunglass.jpeg" class="order-summary-list-list-item-image" alt="">
                    <p class="order-summary-list-list-item-title">Sunglasses</p>
                    <p class="order-summary-list-list-item-price">5.00</p>
                </li>
                <li class="order-summary-list-list-item">
                    <img src="~/images/headphones.jpeg" class="order-summary-list-list-item-image" alt="">
                    <p class="order-summary-list-list-item-title">Headphones</p>
                    <p class="order-summary-list-list-item-price">5.00</p>
                </li>
            </ul>
        </div>
        <div class="cart-footer">
            <span class="cart-footer-label">Total:</span><span class="cart-footer-amount">10.00</span>
            <a asp-area="" asp-controller="Home" asp-action="Checkout" asp-route-id="@ViewBag.PaymentMethod">
                <p class="button">Continue to One-time checkout</p>
            </a>
            <a asp-area="" asp-controller="Home" asp-action="Subscription" asp-route-id="@ViewBag.PaymentMethod">
                <p class="button">Subscribe these products</p>
            </a>
        </div>
    </section>
</main>
